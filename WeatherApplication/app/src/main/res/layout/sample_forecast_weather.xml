<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="15sp"
    android:layout_marginBottom="15sp"
    android:background="#6AFFFFFF"
    android:paddingTop="20sp"
    android:paddingBottom="20sp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Space
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.1" />

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/data_tv"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:autoSizeMaxTextSize="50sp"
                    android:autoSizeMinTextSize="12sp"
                    android:autoSizeStepGranularity="2sp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center|left"
                    android:maxLines="1"
                    android:text="2024-08-31"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/location_tv"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:autoSizeMaxTextSize="50sp"
                    android:autoSizeMinTextSize="12sp"
                    android:autoSizeStepGranularity="2sp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center|left"
                    android:maxLines="1"
                    android:text="Kyiv Kyyivs'ka Oblast'"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Space
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15" />

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/temperature" />

                    <Space
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.15" />

                    <TextView
                        android:id="@+id/maxtemp_tv"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:autoSizeMaxTextSize="50sp"
                        android:autoSizeMinTextSize="12sp"
                        android:autoSizeStepGranularity="2sp"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="+30"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </LinearLayout>

                <Space
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15" />

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/temperature" />

                    <Space
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.15" />

                    <TextView
                        android:id="@+id/avgtemp_tv"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:autoSizeMaxTextSize="50sp"
                        android:autoSizeMinTextSize="12sp"
                        android:autoSizeStepGranularity="2sp"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="+30"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </LinearLayout>

                <Space
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15" />

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/temperature" />

                    <Space
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.15" />

                    <TextView
                        android:id="@+id/mintemp_tv"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:autoSizeMaxTextSize="50sp"
                        android:autoSizeMinTextSize="12sp"
                        android:autoSizeStepGranularity="2sp"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="+30"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </LinearLayout>

                <Space
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Space
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15" />

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/wind" />

                    <Space
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.15" />

                    <TextView
                        android:id="@+id/maxwind_tv"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:autoSizeMaxTextSize="50sp"
                        android:autoSizeMinTextSize="12sp"
                        android:autoSizeStepGranularity="2sp"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="16.6 kph"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </LinearLayout>

                <Space
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15" />

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/humidity" />

                    <Space
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.15" />

                    <TextView
                        android:id="@+id/avghumidity_tv"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:autoSizeMaxTextSize="50sp"
                        android:autoSizeMinTextSize="12sp"
                        android:autoSizeStepGranularity="2sp"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="30%"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </LinearLayout>

                <Space
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15" />

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/cloud" />

                    <Space
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.15" />

                    <TextView
                        android:id="@+id/chance_rain_tv"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:autoSizeMaxTextSize="50sp"
                        android:autoSizeMinTextSize="12sp"
                        android:autoSizeStepGranularity="2sp"
                        android:autoSizeTextType="uniform"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="0%"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </LinearLayout>

                <Space
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15" />
            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="0.1" />
    </LinearLayout>
</LinearLayout>